<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/linearLayoutMenuCours"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewMenuCOurs"
        style="?attr/textInfoCoursMenuCour"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnDownloadPlanningCours"
       style="?attr/buttonDownloadPlanningCours"/>

    <ListView
        android:id="@+id/listViewMenuCours"
        style="?attr/listViewSeance"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btnDownloadPlanningCours"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>